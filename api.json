{
  "info": {
    "name": "Journal Weekly Summary API",
    "_postman_id": "5e1a1c50-3c5c-4e7a-9a7b-collection",
    "description": "Calls GET /api/journal/weekly-summary with optional params.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Weekly Summary (current week, all users)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/journal/weekly-summary",
          "host": ["{{base_url}}"],
          "path": ["api", "journal", "weekly-summary"]
        }
      }
    },
    {
      "name": "Weekly Summary (with params)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/journal/weekly-summary?week_ending={{week_ending}}&user_id={{user_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "journal", "weekly-summary"],
          "query": [
            { "key": "week_ending", "value": "{{week_ending}}", "description": "ISO date, e.g. 2025-11-09" },
            { "key": "user_id", "value": "{{user_id}}", "description": "existing users.id" }
          ]
        }
      }
    }
  ],
  "event": [],
  "variable": [
    { "key": "base_url", "value": "http://127.0.0.1:8000" },
    { "key": "week_ending", "value": "" },
    { "key": "user_id", "value": "" }
  ]
}